<section class="model-area section-gap" id="cars">
				<div class="container">
					<div class="row d-flex justify-content-center pb-40">
						<div class="col-md-8 pb-40 header-text">
							<h1 class="text-center pb-10">Choose your Desired Bike Model</h1>
							<p class="text-center">
								Bikes for bikers by bikers
							</p>
						</div>
					</div>		

					
					{{#each gigs}}

          	<div class="row align-items-center single-model item">
							<div class="col-lg-6 model-left">
								<div class="title justify-content-between d-flex">
									<h4 class="mt-20">{{title}}</h4>
									<h2>{{rate_per_day}} rs. <span>/day</span></h2>
								</div>
								<p>
									{{description}}
								</p>
								<p>
									Capacity         : 12 ltr <br>
									Condition        : Good <br>
									Engine           : {{engine}} <br>
								</p>
								<a class="text-uppercase primary-btn" href="/gigs/{{id}}/details">Book This Bike Now</a>
							</div>
							<div class="col-lg-6 model-right">
								<img class="img-fluid" src="img/bike.jpg" alt="">
							</div>
						</div>

            {{else}}
              <p>No gigs available</p>

            {{/each}}												
					</div>
				</div>	
			</section>
			<!-- End model Area -->			

